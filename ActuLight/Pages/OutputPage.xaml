<Page x:Class="ActuLight.Pages.OutputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OutputPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="데이터 가져오기" Click="LoadData_Click" Margin="0,0,10,0"/>
            <Button Content="시작" Click="Start_Click" Margin="0,0,10,0"/>
            <Button Content="취소" Click="Cancel_Click"/>
        </StackPanel>

        <TabControl x:Name="OutputTabControl" Grid.Row="1">
            <!-- TabItems will be added dynamically -->
        </TabControl>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock x:Name="ProgressLabel" Text="진행 상황: "/>
            <TextBlock x:Name="TimeLabel" Text="경과 시간: "/>
            <TextBlock x:Name="TotalPointsLabel" Text="전체 건수: "/>
            <TextBlock x:Name="CompletedPointsLabel" Text="완료 건수: "/>
            <TextBlock x:Name="ErrorPointsLabel" Text="오류 건수: "/>
        </StackPanel>

        <RichTextBox x:Name="ProgressRichTextBox" Grid.Row="3" Margin="10" Height="100" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Page>